<StackPanel xmlns=                                                          <! --создание StackPanel с тремя дочерними элементами: Button , Ellipse и ListBox-->
            "http://schemas.microsoft.com /winfx/2006/xaml/presentation">  <! --Файлы XML должны иметь только один корневой элемент!( в нашем случае StackPanel)-->
  <Button HorizontalAlignment="Center" Margin="24">         
    Hello, XAML!   
  </Button>   
  <Ellipse Width="200" Height="100" Margin="24"     Stroke="Red" StrokeThickness="10" />  <! --элемент Ellipse имеет синтаксис пустого элемента-->
  <ListBox Width="100" Height="100" Margin="24">    
    <ListBoxItem>Sunday</ListBoxItem>      <! --Элемент ListBox имеет семь дочерних элементов, которые являются элементами ListBoxItem-->
    <ListBoxItem>Monday</ListBoxItem>    
    <ListBoxItem>Tuesday</ListBoxItem>     
    <ListBoxItem>Wednesday</ListBoxItem>     
    <ListBoxItem>Thursday</ListBoxItem>     
    <ListBoxItem>Friday</ListBoxItem>     
    <ListBoxItem>Saturday</ListBoxItem>  
    </ListBox> </StackPanel> 

